<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/openNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_marginVertical="2dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notification_profile"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:padding="3dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/orage_circle"
        app:layout_constraintBottom_toBottomOf="@+id/notification_profile"
        app:layout_constraintEnd_toEndOf="@+id/notification_profile"
        app:layout_constraintStart_toStartOf="@+id/notification_profile"
        app:layout_constraintTop_toTopOf="@+id/notification_profile" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/notification_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notification_profile"
        app:layout_constraintTop_toTopOf="@+id/notification_profile">

        <TextView
            android:id="@+id/notification_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khushbu Swami mentioned you in their story."
            android:textColor="@color/black"
            android:textSize="16sp"
/>
        <TextView
            android:id="@+id/notification_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 min ago"
            android:layout_marginTop="3dp"
            android:textColor="@color/grad_start"
            android:textSize="10sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>